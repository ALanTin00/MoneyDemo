<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f9f9fa"
    tools:context="com.tanlian.wallet.wallet.MessageCenterActivity">
    <FrameLayout
        android:id="@+id/message_center_back_fl"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/uga_wallet_back_icon"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_20"
        android:text="@string/notification_center"
        android:fontFamily="@font/ping_fang_bold"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_message_transfer_accounts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_18"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_12"
            android:fontFamily="@font/ping_fang_bold"
            android:text="@string/transfer_accounts"/>
        <TextView
            android:id="@+id/activity_message_system_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A4AAB1"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_18"
            android:fontFamily="@font/ping_fang_bold"
            android:text="@string/system"/>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/message_center_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/message_center_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
