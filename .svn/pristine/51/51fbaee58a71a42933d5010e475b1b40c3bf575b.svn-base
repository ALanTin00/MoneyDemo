<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingRight="5.7dp"
        android:paddingLeft="5.7dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:background="@drawable/shape_bg_common_dialog_title"
            android:gravity="center"
            android:text="标题"
            android:textColor="#010101"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_common_dialog_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14.4dp"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:lineSpacingExtra="3dp"
                    android:paddingBottom="11.5dp"
                    android:paddingTop="11.5dp"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/v_line"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/ll_bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_click_dialog_left"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_common_dialog_left_text"
                    android:textSize="15.3sp" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc" />

                <Button
                    android:id="@+id/but_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_click_dialog_right"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_common_dialog_right_text"
                    android:textSize="15.3sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>