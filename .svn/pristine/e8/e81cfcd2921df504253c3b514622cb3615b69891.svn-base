<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_30"
    android:background="#66565D70">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/dp_15"
       android:layout_marginRight="@dimen/dp_15"
       android:layout_alignParentBottom="true"
       android:orientation="vertical">
       <TextView
           android:id="@+id/question_type_charge"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_55"
           android:background="@drawable/bg_white_tl_rt_r8"
           android:textColor="@color/color_485176"
           android:textSize="@dimen/sp_15"
           android:fontFamily="@font/ping_fang_bold"
           android:gravity="center"
           android:text="充币问题"/>
       <TextView
           android:id="@+id/question_type_draw"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_55"
           android:background="@color/white"
           android:textColor="@color/color_485176"
           android:textSize="@dimen/sp_15"
           android:gravity="center"
           android:fontFamily="@font/ping_fang_bold"
           android:text="提币问题"/>
       <TextView
           android:id="@+id/question_type_others"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_55"
           android:background="@color/white"
           android:textColor="@color/color_485176"
           android:textSize="@dimen/sp_15"
           android:gravity="center"
           android:fontFamily="@font/ping_fang_bold"
           android:text="其他问题"/>
       <TextView
           android:id="@+id/question_type_cancel"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_55"
           android:background="@drawable/bg_f1f1f4_bl_br_r8"
           android:textColor="@color/color_275DFE"
           android:textSize="@dimen/sp_15"
           android:gravity="center"
           android:fontFamily="@font/ping_fang_bold"
           android:text="取消"/>
   </LinearLayout>
</RelativeLayout>