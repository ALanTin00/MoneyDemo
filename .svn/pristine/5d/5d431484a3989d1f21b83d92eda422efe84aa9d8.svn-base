<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9fa"
    android:orientation="vertical"
    tools:context="com.tanlian.wallet.wallet.OpionFeedbackActivity">
    <FrameLayout
        android:id="@+id/opinion_feedback_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@mipmap/uga_wallet_back_icon"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_20"
        android:text="@string/opinion_feedback"
        android:fontFamily="@font/ping_fang_bold"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/color_33"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/your_name"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/feedback_name_input_bg">
        <EditText
            android:id="@+id/activity_opinion_feedback_input_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:hint="请输入您的称呼"
            android:maxLength="16"
            android:fontFamily="@font/ping_fang_bold"
            android:textColorHint="@color/color_A3ADC6"
            android:textSize="@dimen/sp_13"
            android:background="@null"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/color_33"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/concact_way"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/feedback_name_input_bg">
        <EditText
            android:id="@+id/activity_opinion_feedback_input_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:hint="请输入您的手机号"
            android:fontFamily="@font/ping_fang_bold"
            android:textColorHint="@color/color_A3ADC6"
            android:textSize="@dimen/sp_13"
            android:background="@null"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/color_33"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/question_type"/>
    <FrameLayout
        android:id="@+id/question_type_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/feedback_name_input_bg">
        <TextView
            android:id="@+id/activity_opinion_feedback_question_type_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:textColor="@color/color_33"
            android:hint="选择问题种类"
            android:fontFamily="@font/ping_fang_bold"
            android:textColorHint="@color/color_A3ADC6"
            android:textSize="@dimen/sp_13"
            android:background="@null"/>
        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_13"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/more_arrow"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="@color/color_33"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/question_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_103"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/feedback_content_bg">
        <EditText
            android:id="@+id/activity_opinion_feedback_question_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:maxLength="200"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="@color/color_33"
            android:hint="您有什么想说的都可以在这里告诉我们嗷！"
            android:fontFamily="@font/ping_fang_bold"
            android:textColorHint="@color/color_A3ADC6"
            android:textSize="@dimen/sp_13"
            android:background="@null"/>
    </FrameLayout>
    <TextView
        android:id="@+id/feedback_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:enabled="false"
        android:background="@drawable/feedback_btn_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/submit_feedback"/>
</LinearLayout>
