<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9fa">
        <FrameLayout
            android:id="@+id/activity_about_us_back"
            android:layout_width="@dimen/dp_51"
            android:layout_height="@dimen/dp_51">
            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@mipmap/uga_wallet_back_icon"/>
        </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/activity_about_us_icon"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/dp_65"/>
        <TextView
            android:id="@+id/activity_about_us_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/activity_about_us_icon"
            android:fontFamily="@font/ping_fang_bold"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/activity_about_us_app_name"
            android:fontFamily="@font/ping_fang_bold"
            android:layout_centerHorizontal="true"
            android:text="1.0.0"/>
        <TextView
            android:id="@+id/copyright_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ping_fang_bold"
            android:text="碳链股份 版权所有"/>
        <TextView
            android:id="@+id/version_update_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A1ABB9"
            android:textSize="@dimen/sp_14"
            android:layout_above="@+id/copyright_tips"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/ping_fang_bold"
            android:layout_centerHorizontal="true"
            android:text="版本无需更新"/>
    </RelativeLayout>
</LinearLayout>