<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/welcome_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/color_263A4C"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_80"
        android:fontFamily="@font/ping_fang_bold"
        android:text="@string/login_uga_wallet"/>

    <LinearLayout
        android:id="@+id/phone_number_input_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/bg_f6f9fc_radius_30"
        android:layout_below="@+id/welcome_back_tv"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_29"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="@string/phone_number"
            android:fontFamily="@font/ping_fang_bold"
            android:textColor="@color/color_bf"
            android:layout_marginTop="@dimen/dp_10"/>
        <EditText
            android:id="@+id/activity_login_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_253A4B"
            android:maxLength="11"
            android:textColorHint="@color/color_bf"
            android:fontFamily="@font/ping_fang_bold"
            android:textSize="@dimen/sp_13"
            android:hint="@string/please_input_phone_num"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pass_word_input_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/bg_f6f9fc_radius_30"
        android:layout_below="@+id/phone_number_input_ll"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_29"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="@string/pass_word"
            android:textColor="@color/color_bf"
            android:fontFamily="@font/ping_fang_bold"
            android:layout_marginTop="@dimen/dp_10"/>
        <EditText
            android:id="@+id/activity_login_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_253A4B"
            android:inputType="textPassword"
            android:fontFamily="@font/ping_fang_bold"
            android:hint="@string/please_input_pwd"
            android:textSize="@dimen/sp_13"
            android:textColorHint="@color/color_bf"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@null"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/pass_word_input_ll">
        <FrameLayout
            android:id="@+id/activity_login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_84"
            android:background="@mipmap/bg_login_btn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_gravity="center"
                android:fontFamily="@font/ping_fang_bold"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                />
        </FrameLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/activity_login_bottom_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_134"
        android:background="@mipmap/bg_login_bottom_icon"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>