<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_ff_e7fffd">

    <com.alan.handsome.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_10"
        app:bg_color="@color/transparent"
        app:title="Basic information"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="Full Name"/>

    <EditText
        android:id="@+id/full_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_49"
        android:layout_marginRight="@dimen/dp_53"
        android:textSize="@dimen/sp_16"
        android:background="@null"
        android:textColorHint="@color/color_ADADAD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="E-mail"/>

    <EditText
        android:id="@+id/e_mail_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_49"
        android:layout_marginRight="@dimen/dp_53"
        android:textSize="@dimen/sp_16"
        android:background="@null"
        android:textColorHint="@color/color_ADADAD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="Birthday"/>

    <RelativeLayout
        android:id="@+id/birthday_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            android:id="@+id/birthday_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/right_arrows"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="Gender"/>

    <RelativeLayout
        android:id="@+id/gender_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            android:id="@+id/gender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/right_arrows"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="Marital"/>

    <RelativeLayout
        android:id="@+id/marital_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            android:id="@+id/marital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/right_arrows"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_ADADAD"
        android:text="Education"/>

    <RelativeLayout
        android:id="@+id/education_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            android:id="@+id/education_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/right_arrows"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_41"
        android:background="@color/color_89C6C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/save_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_19"
        android:background="@drawable/bg_00bcb8_00d1af_r23"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    </LinearLayout>