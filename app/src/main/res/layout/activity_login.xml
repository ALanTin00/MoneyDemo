<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_232"
        android:background="@mipmap/login_bg"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.alan.handsome.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_32"
            android:textColor="@color/color_black"
            android:text="Log In"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_21"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_646464"
            android:text="Send us your phone number to register the account"/>


        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="phone"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_48"
            android:drawableLeft="@mipmap/phone_icon"
            android:drawablePadding="@dimen/dp_8"
            android:hint="Please enter the phone number"
            android:textColorHint="@color/color_B5B5B5"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:background="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_DCDCDC"/>

        <TextView
            android:id="@+id/Next_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_48"
            android:text="Next Step"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:background="@drawable/bg_00bcb8_00d1af_r23"/>

    </LinearLayout>
    
    
</RelativeLayout>