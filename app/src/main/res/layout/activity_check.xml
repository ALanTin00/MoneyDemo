<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <com.alan.handsome.widget.TitleBar
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:title="Mo 9 Credit"/>


    <ImageView
        android:id="@+id/processing_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_314"
        android:background="@mipmap/processing_iocn" />

    <TextView
        android:id="@+id/tip_one_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:text="Processing.."
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tip_two_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_21"
        android:text="your application information has been submitted, we will complete the review of your information within,3minutes,please pay attention in time"
        android:textColor="@color/color_646464"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/refresh_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/bg_00bcb8_00d1af_r23"
        android:gravity="center"
        android:text="Refresh"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />


</LinearLayout>