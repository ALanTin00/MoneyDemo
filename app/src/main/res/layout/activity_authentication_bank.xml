<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F9FAFC">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/feedback_top" />

    <com.alan.handsome.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        app:bg_color="@color/transparent" />

        <LinearLayout
            android:layout_below="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_53"
                android:layout_marginRight="@dimen/dp_59">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/line_one_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_1"
                        android:background="@drawable/select_line"/>

                    <TextView
                        android:id="@+id/line_two_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_1"
                        android:background="@drawable/select_line"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/pass_one_tv"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_11"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/select_circle"/>

                <TextView
                    android:id="@+id/pass_two_tv"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/select_circle"/>

                <TextView
                    android:id="@+id/pass_three_tv"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="@drawable/select_circle"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_103"
                android:textSize="@dimen/sp_16"
                android:text="Bank information"
                android:textColor="@color/color_121624"/>

            <EditText
                android:id="@+id/ifsc_code_edit"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="@dimen/dp_53"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_33"
                android:textColorHint="@color/color_ADADAD"
                android:hint="IFSC Code"
                android:background="@drawable/bg_ff_138d85_r27"/>

            <EditText
                android:id="@+id/bank_name_edit"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="@dimen/dp_53"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_33"
                android:hint="Bank Name"
                android:background="@drawable/bg_ff_138d85_r27"/>

            <EditText
                android:id="@+id/bank_num_edit"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="number"
                android:layout_height="@dimen/dp_53"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_30"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_33"
                android:hint="Bank Account NO."
                android:background="@drawable/bg_ff_138d85_r27"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Next_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="Next"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:background="@drawable/bg_00bcb8_00d1af_r23"/>
        </LinearLayout>


</RelativeLayout>