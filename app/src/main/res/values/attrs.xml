<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="title" format="string" />
        <attr name="have_back" format="boolean" />
        <attr name="right_text_color" format="color" />
        <attr name="bg_color" format="color" />
        <attr name="title_color" format="color" />
        <attr name="right_text" format="string" />
        <attr name="have_right_icon" format="boolean" />
        <attr name="right_icon_src" format="reference" />
        <attr name="left_icon_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="CodeCountDownTextView">
        <attr name="normal_message" format="string" />
        <attr name="countdown" format="integer" />
    </declare-styleable>

    <declare-styleable name="SideBar">
        <attr name="letterColor" format="color"/>
        <attr name="selectColor" format="color"/>
        <attr name="letterSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MSwipeLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <!-- ShadowLayout 阴影 -->
    <declare-styleable name="ShadowLayout">
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="shadowDx" format="dimension"/>
        <attr name="shadowDy" format="dimension"/>
        <attr name="shadowShape">
            <flag name="rectangle" value="0x0001"/>
            <flag name="oval" value="0x0010"/>
        </attr>
        <attr name="shadowSide">
            <flag name="all" value="0x1111"/>
            <flag name="left" value="0x0001"/>
            <flag name="top" value="0x0010"/>
            <flag name="right" value="0x0100"/>
            <flag name="bottom" value="0x1000"/>
        </attr>
    </declare-styleable>
</resources>