<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alan.handsome">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 用于进行网络定位 -->

    <application
        android:name="com.alan.handsome.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">

        <activity android:name=".module.main.ui.SplashActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.main.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.main.ui.FeedBackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.main.ui.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.main.ui.BaseInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.main.ui.WorkInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.main.ui.BankInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.LoansPrepareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.CheckActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.PassSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.AuthenticationBaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.AuthenticationWorkActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.AuthenticationBankActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.PayOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.loans.ui.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>